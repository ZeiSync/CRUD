@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}


<h1 class="display-4 text-center">Edit</h1>

<form class="row" method="post">
    <input type="hidden" asp-for="Employee.Id" />
    <div class="col-6">
        <div class="form-group">
            <label>Employee Code</label>
            <input class="form-control" disabled asp-for="Employee.Id" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.Group">Group</label>
            <select class="form-control" asp-for="Employee.Group" asp-items="Html.GetEnumSelectList<Group>()"></select>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Name">Employee Name</label>
            <input asp-for="Employee.Name" class="form-control" />
        </div>


        <div class="form-group">
            <label asp-for="Employee.DateOfBirth">Date of birth</label>
            <input asp-for="Employee.DateOfBirth" class="form-control" />
            <span asp-validation-for="Employee.DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Gender" class="control-label"></label>
            <div>
                Male:   @Html.RadioButton("Employee.Gender", true)
                Female: @Html.RadioButton("Employee.Gender", false)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Employee.PhoneNumber">Phone number</label>
            <input asp-for="Employee.PhoneNumber" class="form-control" />
            <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-6">


        <div class="form-group">
            <label asp-for="Employee.CMND"></label>
            <input asp-for="Employee.CMND" class="form-control" />
            <span asp-validation-for="Employee.CMND" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Email"></label>
            <input asp-for="Employee.Email" class="form-control" />
            <span asp-validation-for="Employee.Email" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Employee.Address"></label>
            <textarea asp-for="Employee.Address" class="form-control" cols="50" rows="2"></textarea>
            <span class="text-danger" asp-validation-for="Employee.Address"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-dark text-light">Edit</button>
    <a class="btn btn-dark text-light ml-3" asp-controller="Employees" asp-action="Index">Cancle</a>
</form>